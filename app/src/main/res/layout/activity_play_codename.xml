<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayCodename">

    <TextView
            android:id="@+id/lblQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:text="SET A Q: 1"
            android:textColor="#000000"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="invisible"
    />

    <TextView
            android:id="@+id/lblScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:text="SCORE:\n0000"
            android:textColor="#000000"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="invisible"
    />

    <TextView
            android:id="@+id/lblQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="20dp"
            android:textSize="23dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/questions"
            android:visibility="invisible"
    />

    <Button
            android:id="@+id/btnA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/btnB"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button_a"
            android:text="A"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
    />

    <Button
            android:id="@+id/btnB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/btnC"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button_b"
            android:text="B."
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
    />

    <Button
            android:id="@+id/btnC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/btnD"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button_c"
            android:text="C."
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
    />

    <Button
            android:id="@+id/btnD"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:background="@drawable/custom_button_d"
            android:text="D."
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="invisible"
    />

    <Button
            android:id="@+id/btnStart"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:text="START QUIZ!"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="@drawable/custom_button_b"
    />

</RelativeLayout>